# ========================================
# 天气分析项目配置示例
# 复制此文件为 .env 并填写实际值
# ========================================

# API配置
OPENWEATHER_API_KEY=your_api_key_here

# 目标城市配置（可随时修改）
WEATHER_CITY=Guilin          # 城市英文名（OpenWeatherMap识别的名称）
WEATHER_COUNTRY=CN           # 国家代码
WEATHER_LAT=25.2345          # 纬度（可选，用于坐标查询）
WEATHER_LON=110.1799         # 经度（可选）
CITY_DISPLAY_NAME=桂林       # 显示名称（支持中文）

# 分析配置
USE_CACHE=true              # 是否使用缓存
CACHE_HOURS=1               # 缓存有效期（小时）
FORECAST_DAYS=5             # 预报天数

# 系统配置
TIMEZONE=Asia/Shanghai      # 时区
LANGUAGE=zh_cn              # 语言